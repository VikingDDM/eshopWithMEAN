{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./server"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-irregular-whitespace": 0,
    "camelcase": "off"
  }
}
